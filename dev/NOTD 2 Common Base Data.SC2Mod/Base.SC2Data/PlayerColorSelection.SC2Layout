<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

    <Frame type="EditBox" name="ColorEditBoxTemplate">
        <AcceptsMouse val="true"/>
        <Width val="75"/>
        <Height val="75"/>
        <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
        <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
        <BlinkRate val="500"/>
        <CaretColor val="255,255,255"/>
        <Style val="ColorSelectionValues"/>
        <Text val="0"/>
        <AllowedButtons val="Left"/>
        <MaxCharacters val="3"/>
        <Image val="$root/StandardTemplates/StandardTechBorderButton"/>
        <Insets top="10" left="10" bottom="10" right="10"/>
    </Frame>

    <Frame type="Slider" name="ColorSelection">
        <Width val="510"/>
        <Height val="96"/>
        <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        <MaxValue val="255.000000"/>
        <MinValue val="0.000000"/>
        <StepValue val="1.000000"/>
        <Orientation val="Horizontal"/>
        <Image val="Background"/>
        <FillContainer val="FillContainer"/>
        <FillBarImage val="FillImage"/>
        <Button val="Button"/>
        <AutoSizeFillBar val="true"/>

        <Frame type="Image" name="Background">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Width val="24"/>
            <Texture val="@@UI/StandardSlider"/>
            <TextureType val="Border"/>
            <Tiled val="true"/>
            <DesaturateOnDisable val="false"/>
        </Frame>

        <Frame type="Frame" name="FillContainer">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Height val="64"/>
        </Frame>

        <Frame type="Image" name="FillImage">
            <Texture val="@@UI/StandardSliderFill"/>
            <TextureType val="Border"/>
            <Tiled val="true"/>
            <DesaturateOnDisable val="false"/>
            <Desaturated val="true"/>
        </Frame>

        <Frame type="Button" name="Button">
            <NormalImage val="NormalImage"/>
            <HoverImage val="HoverImage"/>
            <Width val="32"/>
            <Height val="64"/>

            <Frame type="Image" name="NormalImage">
                <Width val="32"/>
                <Height val="64"/>
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Texture val="@@UI/StandardSliderButton"/>
                <StateCount val="2"/>
                <Desaturated val="true"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <Width val="32"/>
                <Height val="64"/>
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Texture val="@@UI/StandardSliderButton"/>
                <StateCount val="2"/>
                <Desaturated val="true"/>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Slider" name="RedSlider" template="PlayerColorSelection/ColorSelection">

        <Frame type="Image" name="FillImage">
            <DesaturationColor val="255,0,0"/>
        </Frame>

        <Frame type="Button" name="Button">

            <Frame type="Image" name="NormalImage">
                <DesaturationColor val="255,0,0"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <DesaturationColor val="255,0,0"/>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Slider" name="GreenSlider" template="PlayerColorSelection/ColorSelection">

        <Frame type="Image" name="FillImage">
            <DesaturationColor val="0,255,0"/>
        </Frame>

        <Frame type="Button" name="Button">

            <Frame type="Image" name="NormalImage">
                <DesaturationColor val="0,255,0"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <DesaturationColor val="0,255,0"/>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Slider" name="BlueSlider" template="PlayerColorSelection/ColorSelection">

        <Frame type="Image" name="FillImage">
            <DesaturationColor val="0,0,255"/>
        </Frame>

        <Frame type="Button" name="Button">

            <Frame type="Image" name="NormalImage">
                <DesaturationColor val="0,0,255"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <DesaturationColor val="0,0,255"/>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Slider" name="AlphaSlider" template="PlayerColorSelection/ColorSelection">

        <Frame type="Image" name="FillImage">
            <DesaturationColor val="255,255,255"/>
        </Frame>

        <Frame type="Button" name="Button">

            <Frame type="Image" name="NormalImage">
                <DesaturationColor val="255,255,255"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <DesaturationColor val="255,255,255"/>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Frame" name="ColorSelectionTemplate">

        <Frame type="Frame" name="RedColorSelect">
            <Width val="605"/>
            <Height val="96"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="150"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="325"/>

            <Frame type="Slider" name="Slider" template="PlayerColorSelection/RedSlider">
            </Frame>

            <Frame type="EditBox" name="EditBox" template="PlayerColorSelection/ColorEditBoxTemplate">
                <Anchor side="Left" relative="$parent/Slider" pos="Max" offset="20"/>
            </Frame>
        </Frame>

        <Frame type="Frame" name="GreenColorSelect">
            <Width val="605"/>
            <Height val="96"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="150"/>
            <Anchor side="Top" relative="$parent/RedColorSelect" pos="Min" offset="175"/>

            <Frame type="Slider" name="Slider" template="PlayerColorSelection/GreenSlider">
            </Frame>

            <Frame type="EditBox" name="EditBox" template="PlayerColorSelection/ColorEditBoxTemplate">
                <Anchor side="Left" relative="$parent/Slider" pos="Max" offset="20"/>
            </Frame>
        </Frame>

        <Frame type="Frame" name="BlueColorSelect">
            <Width val="605"/>
            <Height val="96"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="150"/>
            <Anchor side="Top" relative="$parent/GreenColorSelect" pos="Min" offset="175"/>

            <Frame type="Slider" name="Slider" template="PlayerColorSelection/BlueSlider">
            </Frame>

            <Frame type="EditBox" name="EditBox" template="PlayerColorSelection/ColorEditBoxTemplate">
                <Anchor side="Left" relative="$parent/Slider" pos="Max" offset="20"/>
            </Frame>
        </Frame>
    </Frame>
</Desc>
