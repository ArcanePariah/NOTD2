<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Constant name="ColorMinimapButtonIcon" val="40,125,75"/>
    <Constant name="ColorMinimapButtonIcon_Prot" val="110,170,255"/>
    <Constant name="ColorMinimapButtonIcon_Terr" val="40,125,75"/>
    <Constant name="ColorMinimapButtonIcon_Zerg" val="245,140,70"/>
    <Constant name="MinimapButtonSize" val="45"/>

    <Frame type="GameUI" name="GameUI" file="GameUI">
        <Frame type="Frame" name="UIContainer">
            <Frame type="Frame" name="ConsoleUIContainer">
                <Frame type="MinimapPanel" name="MinimapPanel">
                    <Frame type="Image" name="BackgroundImage">
                        <RenderPriority val="500"/>
                        <Anchor relative="$parent"/>
                        <Texture val="UI\UI-Minimap_border.dds"/>
                    </Frame>

                    <Frame type="Button" name="ColorButton">
                        <Height val="#MinimapButtonSize"/>
                        <Width val="#MinimapButtonSize"/>
                        <Anchor side="Right" relative="$parent" pos="Mid" offset="5"/>
                        <Anchor side="Bottom" relative="$parent" pos="Min" offset="50"/>

                        <Frame type="Image" name="NormalImage">
                            <Texture val="UI\UI-Inventory_btn-overlay.dds"/>
                            <StateCount val="1"/>
                        </Frame>

                        <Frame type="Image" name="HoverImage">
                            <Texture val="UI\UI-Inventory_btn-overlay.dds"/>
                            <StateCount val="1"/>
                        </Frame>
                    </Frame>

                    <Frame type="Button" name="PingButton">
                        <Height val="#MinimapButtonSize"/>
                        <Width val="#MinimapButtonSize"/>
                        <Anchor side="Right" relative="$parent" pos="Mid" offset="45"/>
                        <Anchor side="Bottom" relative="$parent" pos="Min" offset="50"/>

                        <Frame type="Image" name="NormalImage">
                            <Texture val="UI\UI-Inventory_btn-overlay.dds"/>
                            <StateCount val="1"/>
                        </Frame>

                        <Frame type="Image" name="HoverImage">
                            <Texture val="UI\UI-Inventory_btn-overlay.dds"/>
                            <StateCount val="1"/>
                        </Frame>
                    </Frame>

                    <Frame type="Button" name="TerrainButton">
                        <Anchor side="Bottom" relative="$parent" pos="Min" offset="-5000"/>
                    </Frame>

                    <Frame type="Button" name="TeamLocationButton">
                        <Height val="#MinimapButtonSize"/>
                        <Width val="#MinimapButtonSize"/>
                        <ClickSound val="@UI_MiniMapPanelButtonSelect"/>
                        <Anchor side="Right" relative="$parent" pos="Mid" offset="85"/>
                        <Anchor side="Bottom" relative="$parent" pos="Min" offset="50"/>
                        <Shortcut val="Y"/>

                        <Frame type="Image" name="Icon">
                            <RenderPriority val="600"/>
                            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                            <Texture val="btn-minimap-team_location.dds"/>
                            <TextureType val="Normal"/>
                            <LayerColor val="##ColorMinimapButtonIcon"/>
                        </Frame>
                    </Frame>
                </Frame>
            </Frame>
        </Frame>
    </Frame>
</Desc>
