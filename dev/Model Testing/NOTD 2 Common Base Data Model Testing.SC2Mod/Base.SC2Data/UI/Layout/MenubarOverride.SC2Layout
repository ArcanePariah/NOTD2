<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Frame type="Frame" name="GameUI\UIContainer\FullscreenUpperContainer\MenuBarConsoleAnchor" file="GameUI">
		<Anchor side="Bottom" relative="$parent/$parent/ConsoleUIContainer/CommandBorderImage" pos="Min" offset="12"/>
        <Width val="330"/>
        <Height val="60"/>
    </Frame>

    <Frame type="MenuBar" name="GameUI\UIContainer\FullscreenUpperContainer\MenuBar" file="GameUI">
		<Width val="330"/>
        <Height val="60"/>
        <Frame type="Image" name="MenuBarBackgroundImage">
            <Texture val="@UI/MenuBorder"/>
			<RenderPriority val = "513"/>
        </Frame>
		<Frame type="Button" name="MenuButton">
			<Anchor side="Right" relative="$parent/MenuBarBackgroundImage" pos="Max" offset="-7"/>
			<Anchor side="Top" relative="$parent/MenuBarBackgroundImage" pos="Min" offset="-2"/>
			<Width val = "82" />
			<Height val = "64" />
			<Frame type="Image" name="NormalImage">
				<Texture val="UI/ui_menu_menubtn.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>

			<Frame type="Image" name="HoverImage">
				<Texture val="UI/ui_menu_menubtn.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>
        </Frame>


        <Frame type="SocialButton" name="SocialButton">
			<Height val = "60" />
			<Width val = "46" />
			<Anchor side="Top" relative="$parent/MenuBarBackgroundImage" pos="Min" offset="0"/>
			<Anchor side="Left" relative="$parent/MenuButton" pos="Min" offset="-48"/>

			<Frame type="Image" name="NormalImage">
				<Texture val="UI/ui_menu_friendbtn.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>
			
			<Frame type="Image" name="HoverImage">
				<Texture val="UI/ui_menu_friendbtn_hover.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>
        </Frame>
		
		<Frame type="Button" name="HelpButton">
			<Height val = "60" />
			<Width val = "52" />
			<Anchor side="Top" relative="$parent/MenuBarBackgroundImage" pos="Min" offset="0"/>
			<Anchor side="Left" relative="$parent/SocialButton" pos="Min" offset="-56"/>
			<Frame type="Image" name="NormalImage">
				<Texture val="UI/ui_menu_helpbtn.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>

			<Frame type="Image" name="HoverImage">
				<Texture val="UI/ui_menu_helpbtn_hover.dds" layer="0"/>
				<StateCount val="3"/>
			</Frame>
        </Frame>

        <Frame type="Button" name="TalentButton">
            <NormalImage val="NormalImage"/>
			<Width val = "82" />
			<Height val = "64" />
            <ClickSound val="@UI_MiniMapPanelButtonSelect"/>
            <Anchor side="Right" relative="$parent/HelpButton" pos="Min" offset="-1"/>
            <Anchor side="Top" relative="$parent/MenuBarBackgroundImage" pos="Min" offset="-2"/>
            <Shortcut val="B"/>
            <Tooltip val="Access character talent trees and spend skillpoints."/>
            <Label val="TalentLabel"/>

            <Frame type="Image" name="NormalImage">
                <RenderPriority val="500"/>
                <Anchor relative="$parent" offset="0"/>
                <Texture val="UI/ui_menu_talentbtn.dds"/>
                <TextureType val="Normal"/>
                <StateCount val="3"/>
            </Frame>

            <Frame type="Label" name="TalentLabel">
                <Anchor side="Top" relative="$parent" pos="Min" offset="3"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="2"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Style val="@@MenuBarButton"/>
                <Text val="Talents"/>
            </Frame>
			<Animation name="Pulse">
				<Event event="TalentAvailable" action="DirectionForward, Play" frame="$this"/>
				<Event event="TalentUnavailable" action="Restart, Pause" frame="$this"/>
				<Controller type="Color" end="Loop" >
					<Key type="Curve" time="0" value="155;255;190" />
					<Key type="Curve" time="0.75" value="204;255;204" />
					<Key type="Curve" time="1.5" value="155;255;190" />
				</Controller>
				<Controller type="Fade" end="Loop" >
					<Key type="Curve" time="0" value="255"  />
					<Key type="Curve" time="0.75" value="190"  />
					<Key type="Curve" time="1.5" value="255" />
				</Controller>
			</Animation>
            <Frame type="Animation" name="TalentShowHide">
                <Event event="OnClick" action="Play" frame="$this"/>
				<Event event="OnHidden" action="Pause,DirectionReverse" frame="$parent/$parent/TalentPanel"/>
				<Event event="OnShown" action="Pause,DirectionForward" frame="$parent/$parent/TalentPanel"/>
                <Controller name="Visibility_0" type="Visibility" end="Pause" frame="$parent/$parent/TalentPanel">
                    <Key type="Bool" time="0.000" value="true"/>
                    <Key type="Bool" time="0.050" value="false"/>
                </Controller>
            </Frame>
        </Frame>

        <Frame type="Button" name="NightVisionButton">
			<Toggleable val="true"/>
            <NormalImage val="NormalImage"/>
            <HoverImage val="HoverImage"/>
            <Height val="60"/>
            <Width val="46"/>
            <ClickSound val="@UI_MiniMapPanelButtonSelect"/>
            <Anchor side="Right" relative="$parent/TalentButton" pos="Min" offset="-2"/>
            <Anchor side="Bottom" relative="$parent/MenuBarBackgroundImage" pos="Max" offset="0"/>
            <Shortcut val="N"/>
			<Tooltip val = "Enables/Disables Night Vision. Night Vision gives extended vision range and detection."/>

            <Frame type="Image" name="NormalImage">
                <RenderPriority val="500"/>
                <Anchor relative="$parent" offset="0"/>
                <Texture val="UI/ui_menu_nightvisionbtn.dds"/>
				<StateCount val = "3"/>
            </Frame>
			<Frame type="Image" name="HoverImage">
                <RenderPriority val="500"/>
                <Anchor relative="$parent" offset="0"/>
                <Texture val="UI/ui_menu_nightvisionbtn_hover.dds"/>
				<StateCount val = "3"/>
            </Frame>
        </Frame>
		
    </Frame>
</Desc>
